import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
products_df = pd.read_csv(r"C:\Users\THAKALI\Downloads\Products (2).csv")
transactions_df = pd.read_csv(r"C:\Users\THAKALI\Downloads\Transactions (2).csv")
customers_df = pd.read_csv(r"C:\Users\THAKALI\Downloads\Customers (2).csv")
print("Products DataFrame Info:")
print(products_df.info())
print(products_df.head())

print("\nTransactions DataFrame Info:")
print(transactions_df.info())
print(transactions_df.head())

print("\nCustomers DataFrame Info:")
print(customers_df.info())
print(customers_df.head())
print("\nMissing values in Products:")
print(products_df.isnull().sum())
print("\nMissing values in Transactions:")
print(transactions_df.isnull().sum())
print("\nMissing values in Customers:")
print(customers_df.isnull().sum())
print("\nDescriptive Statistics for Products:")
print(products_df.describe())
print("\nDescriptive Statistics for Transactions:")
print(transactions_df.describe())
print("\nDescriptive Statistics for Customers:")
print(customers_df.describe())
plt.figure(figsize=(10, 5))
sns.histplot(transactions_df['amount'], bins=30, kde=True)
plt.title('Distribution of Transaction Amounts')
plt.xlabel('Amount')
plt.ylabel('Frequency')
plt.show()

plt.figure(figsize=(10, 5))
sns.countplot(y=customers_df['customer_segment'])
plt.title('Customer Segment Distribution')
plt.xlabel('Count')
plt.ylabel('Customer Segment')
plt.show()

plt.figure(figsize=(10, 5))
sns.boxplot(x=products_df['category'], y=products_df['price'])
plt.xticks(rotation=45)
plt.title('Price Distribution by Product Category')
plt.show()
print("\nDuplicate Records in Products:", products_df.duplicated().sum())
print("Duplicate Records in Transactions:", transactions_df.duplicated().sum())
print("Duplicate Records in Customers:", customers_df.duplicated().sum())
